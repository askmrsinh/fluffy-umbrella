#!/usr/bin/env bash

#if [ ! -z "$WWWUSER" ]; then
#    usermod -u $WWWUSER sail
#fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

if [ $# -gt 0 ]; then
    exec "$@"
else
    cp .env.example .env && printenv
    composer install -n && php artisan key:generate && php artisan php optimize:clear && artisan migrate:fresh
    npm install && npm run prod && printenv
    /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
